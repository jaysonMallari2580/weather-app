<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/day_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_daily"
        android:paddingTop="@dimen/padding_daily"
        android:paddingRight="@dimen/padding_daily"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Monday" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_daily_iv"
        android:layout_width="@dimen/icon_weather_size"
        android:layout_height="@dimen/icon_weather_size"
        android:layout_marginTop="@dimen/margin_daily_item"
        android:src="@drawable/ic_baseline_cloud_queue_24"
        app:layout_constraintEnd_toStartOf="@+id/daily_max_tv"
        android:layout_marginRight="@dimen/icon_daily_margin_right"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/daily_max_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_daily_item"
        android:paddingLeft="@dimen/padding_daily"
        android:paddingTop="@dimen/padding_daily"
        android:paddingRight="@dimen/padding_daily"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/daily_min_tv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="28" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/daily_min_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_daily_item"
        android:paddingTop="@dimen/padding_daily"
        android:paddingRight="@dimen/padding_daily"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="15" />

</androidx.constraintlayout.widget.ConstraintLayout>